/* *** Header *** */

.header
  background-color: #000
  a
    background-color: $red
    display: inline-block
    font-size(24)
    padding: 20px 45px
    text-decoration: none
    &:hover
      background-color: #fff
      transition: all .3s ease

.header
  .nav
    float: right
    ul
      margin: 0
      padding: 0
      li
        display: inline
        float: left
        list-style: none
        a
          border-left: 1px solid $dark-red
